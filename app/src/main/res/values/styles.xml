<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_radius</item>
        <item name="cornerSizeTopLeft">@dimen/card_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DetailsCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.CutDetails
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutDetails" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_radius</item>
        <item name="cornerSizeTopLeft">@dimen/card_radius</item>
        <item name="cornerSizeBottomRight">@dimen/card_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/card_radius</item>
    </style>

    <style name="title1">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="title2">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="subtitle1">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/Subtitle</item>
    </style>

    <style name="footer1">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="headline1">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="headline2">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="inter">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textColor">#50555C</item>
    </style>

    <style name="RestaurantTitle" parent="title1">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="RestaurantSubTitle" parent="subtitle1">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="lineHeight">@dimen/text_16</item>
    </style>

    <style name="RestaurantOpening" parent="footer1">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="lineHeight">@dimen/text_16</item>
        <item name="android:textColor">#50555C</item>
    </style>

    <style name="RestaurantRating" parent="inter">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="lineHeight">@dimen/text_16</item>
        <item name="android:textColor">#50555C</item>
    </style>

    <style name="RestaurantStatus" parent="title1">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

</resources>